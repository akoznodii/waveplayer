<Controls:MetroWindow x:Class="WavePlayer.UI.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:mb="http://metro.mahapps.com/winfx/xaml/shared"
        xmlns:b="clr-namespace:WavePlayer.UI.Behaviors"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        WindowStartupLocation="CenterOwner"
        Height="480" 
        Width="640"
        ShowInTaskbar="False" 
        ShowMaxRestoreButton="False" 
        ShowMinButton="False" 
        ShowTitleBar="True"
        WindowTransitionsEnabled="False"
        ResizeMode="NoResize">
    <i:Interaction.Behaviors>
        <mb:BorderlessWindowBehavior ResizeWithGrip="True" AllowsTransparency="False" />
    </i:Interaction.Behaviors>
    <Grid>
        <WebBrowser x:Name="WebBrowser" b:WebBrowserBehavior.DisableJavaScriptErrors="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Navigated="WebBrowserOnNavigated"/>
    </Grid>
</Controls:MetroWindow>
